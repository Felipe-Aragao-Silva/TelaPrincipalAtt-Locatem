<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Cores -->
    <Color x:Key="CorPrimaria">#FFCB04</Color>
    <Color x:Key="CorSecundaria">#FFCE4F</Color>
    <Color x:Key="CorTerciaria">#272627</Color>
    <Color x:Key="CorQuartaria">#D9D9D9</Color>
    <Color x:Key="CorBranco">#FFFFFF</Color>
    <Color x:Key="CorPreto">#000000</Color>
    <Color x:Key="CorQuitaria">#F2AF0D</Color>
    <Color x:Key="CorErro">#FF0000</Color>

    <!-- Estilos -->
    <Style x:Key="TituloLabel" TargetType="Label">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource CorPreto}"/>
    </Style>

    <Style x:Key="ButtonsSideBar" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource CorPreto}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>
    
    <!--Style dos botões para o carrossel-->

    <Style x:Key="CarrosselLeftButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="WidthRequest" Value="44"/>
        <Setter Property="HeightRequest" Value="44"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="Margin" Value="8,0,0,0"/>
    </Style>

    <Style x:Key="CarrosselRightButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="WidthRequest" Value="44"/>
        <Setter Property="HeightRequest" Value="44"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

</ResourceDictionary>
