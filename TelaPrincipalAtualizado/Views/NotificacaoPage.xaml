<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelaPrincipalAtualizado.Views.NotificacaoPage"
             Title="">

    <Grid x:Name="MainGrid" ColumnDefinitions="300, *" RowDefinitions="*">
        <!-- Painel Esquerdo -->
        <StackLayout x:Name="PainelLateral" 
         Grid.Column="0"
         BackgroundColor="{StaticResource PainelLateral}" 
         Padding="20" Spacing="20">

            <HorizontalStackLayout Spacing="10" VerticalOptions="Center" Margin="30,0,0,0">
                <Image Source="locatem.png" HeightRequest="60" WidthRequest="60" Aspect="AspectFit"/>
                <Label Text="Locatem" FontSize="22" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <Frame CornerRadius="40" HeightRequest="80" WidthRequest="80" Padding="0" HasShadow="False" BackgroundColor="{StaticResource PainelLateralEscuro}" HorizontalOptions="Center">
                <Image Source="https://cdn-icons-png.flaticon.com/512/149/149071.png" Aspect="AspectFill"/>
            </Frame>
            <Label Text="Olá, Usuário" FontSize="16" TextColor="Black" HorizontalOptions="Center"/>

            <!-- Navegação -->
            <VerticalStackLayout Spacing="10" Margin="0,20,0,0">
                <Button Text="Início" Style="{StaticResource BotaoLateral}" />
                <Button Text="Carrinho" Style="{StaticResource BotaoLateral}" />
                <Button Text="Agenda" Style="{StaticResource BotaoLateral}" />
                <Button Text="Histórico" Style="{StaticResource BotaoLateral}" />
                <Button Text="Notificações" Style="{StaticResource BotaoLateralAtivo}" />
                <Button Text="Suporte" Style="{StaticResource BotaoLateral}" />
            </VerticalStackLayout>

        </StackLayout>

        <!-- Conteúdo Direito -->
        <Grid Grid.Column="1" Padding="30" RowDefinitions="Auto, *" RowSpacing="20">

            <Grid ColumnDefinitions="Auto, *, Auto" VerticalOptions="Start">

                <!-- Botão Menu -->
                <ImageButton 
                Source="iconemenu.png" 
                HeightRequest="30" 
                WidthRequest="30" 
                Margin="10,0,0,0"
                BackgroundColor="Transparent"
                VerticalOptions="Center"
                HorizontalOptions="Start"
                Clicked="OnMenuClicked" />

                <Label Grid.Column="1" Text="Notificações" FontSize="26" FontAttributes="Bold" TextColor="{StaticResource CorPadrao}" VerticalOptions="Center" Margin="10,0,0,0"/>

                <HorizontalStackLayout Spacing="15" Grid.Column="2">
                    <!-- Botão Filtro -->
                    <Frame BackgroundColor="{StaticResource CorPadrao}" CornerRadius="10" Padding="10" HasShadow="True" WidthRequest="120">
                        <HorizontalStackLayout Spacing="12" VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="Filtro" TextColor="{StaticResource Detalhe}" VerticalOptions="Center"/>
                            <Image Source="iconefiltro.png" HeightRequest="18" WidthRequest="18" Aspect="AspectFit"/>
                        </HorizontalStackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnFilterClicked"/>
                        </Frame.GestureRecognizers>
                    </Frame>

                    <!-- Botão Limpar Tudo -->
                    <Frame BackgroundColor="{StaticResource CorPadrao}" CornerRadius="10" Padding="10" HasShadow="True" WidthRequest="132">
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="Limpar Tudo" TextColor= "{StaticResource Detalhe}" VerticalOptions="Center"/>
                            <Image Source="iconelixeira.png" HeightRequest="17" WidthRequest="17" Aspect="AspectFit"/>
                        </HorizontalStackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnClearAllClicked"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                </HorizontalStackLayout>
            </Grid>

            <!-- Lista de Notificações -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout x:Name="NotificationsStack" Spacing="15"/>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>