<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelaPrincipalAtualizado.MainPage"
             Shell.NavBarIsVisible="False">

    <Grid Padding="0" x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <StackLayout Grid.Column="0" BackgroundColor="{StaticResource CorQuartaria}" x:Name="sideBarLayout">

            <HorizontalStackLayout Margin="15,30,0,20">
                <Image Source="logo.png" WidthRequest="24" HeightRequest="24"/>
                <Label Text="LOCATEM" FontAttributes="Bold"
                       VerticalOptions="Center" Margin="8,0,0,0"/>
            </HorizontalStackLayout>


            <HorizontalStackLayout Margin="0,10" HorizontalOptions="Start" Padding="15">
                <Image Source="usuario.png"
                       WidthRequest="80" HeightRequest="80"
                       HorizontalOptions="Start"
                       Margin="10,0,0,0"/>
                <Label Text="USUÁRIO"
                       FontSize="20" HorizontalOptions="End"
                       VerticalOptions="Center"
                       Margin="20,0,0,0"
                       FontAttributes="Bold"/>
            </HorizontalStackLayout>

            <!--Linha-->
            <BoxView HeightRequest="1" WidthRequest="250" Color="{StaticResource CorPreto}" Margin="10,20"/>


            <VerticalStackLayout Spacing="15" Margin="20,30">
                
                <!--Inicio-->
                
                <Grid HeightRequest="40">
                    <HorizontalStackLayout VerticalOptions="Center" Spacing="10" Padding="10,0">
                        <!--IMAGEM INICIO-->
                        <Image Source="inicio.png"
                               WidthRequest="20"
                               HeightRequest="20"
                               VerticalOptions="Center"
                               BackgroundColor="Transparent"/>

                        <Label Text="Início"
                               FontSize="16"
                               VerticalOptions="Center"
                               TextColor="Black"/>

                    </HorizontalStackLayout>

                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer  CommandParameter="Início"/>
                    </Grid.GestureRecognizers>

                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="EstadoComun">
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="Seelecionado">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource CorQuartaria}"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Grid>
                
                <!--CARRINHO-->

                <Grid HeightRequest="40">
                    <HorizontalStackLayout VerticalOptions="Center" Spacing="10" Padding="10,0">
                        <!--IMAGEM CARRINHO-->
                        <Image Source="carrinho.png"
                        WidthRequest="20"
                        HeightRequest="20"
                        VerticalOptions="Center"
                        BackgroundColor="Transparent"/>

                        <Label Text="Carrinho"
                        FontSize="16"
                        VerticalOptions="Center"
                        TextColor="Black"/>

                    </HorizontalStackLayout>

                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer  CommandParameter="Início"/>
                    </Grid.GestureRecognizers>

                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="EstadoComun">
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="Seelecionado">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource CorQuartaria}"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Grid>
                
                <!--AGENDA-->

                <Grid HeightRequest="40">
                    <HorizontalStackLayout VerticalOptions="Center" Spacing="10" Padding="10,0">
                        <!--IMAGEM AGENDA-->
                        <Image Source="agenda.png"
                        WidthRequest="20"
                        HeightRequest="20"
                        VerticalOptions="Center"
                        BackgroundColor="Transparent"/>

                        <Label Text="Agendamento"
                        FontSize="16"
                        VerticalOptions="Center"
                        TextColor="Black"/>

                    </HorizontalStackLayout>

                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer  CommandParameter="Início"/>
                    </Grid.GestureRecognizers>

                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="EstadoComun">
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="Seelecionado">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource CorQuartaria}"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Grid>
                
                <!--Histórico-->

                <Grid HeightRequest="40">
                    <HorizontalStackLayout VerticalOptions="Center" Spacing="10" Padding="10,0">
                        <!--IMAGEM HISTÓRICO-->
                        <Image Source="historico.png"
                        WidthRequest="20"
                        HeightRequest="20"
                        VerticalOptions="Center"
                        BackgroundColor="Transparent"/>

                        <Label Text="Histórico"
                        FontSize="16"
                        VerticalOptions="Center"
                        TextColor="Black"/>

                    </HorizontalStackLayout>

                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer  CommandParameter="Início"/>
                    </Grid.GestureRecognizers>

                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="EstadoComun">
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="Seelecionado">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource CorQuartaria}"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Grid>
                
                <!--NOTIFICAÇÕES-->

                <Grid HeightRequest="40">
                    <HorizontalStackLayout VerticalOptions="Center" Spacing="10" Padding="10,0">
                        <!--IMAGEM NOTIFICAÇÕES-->
                        <Image Source="notificacoes.png"
                        WidthRequest="20"
                        HeightRequest="20"
                        VerticalOptions="Center"
                        BackgroundColor="Transparent"/>
                        
                        <Label Text="Notificações"
                        FontSize="16"
                        VerticalOptions="Center"
                        TextColor="Black"/>
                        
                    </HorizontalStackLayout>

                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer  CommandParameter="Início"/>
                    </Grid.GestureRecognizers>

                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="EstadoComun">
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="Seelecionado">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource CorQuartaria}"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                    
                </Grid>
                
                <!--SUPORTE-->

                <Grid HeightRequest="40">
                    <HorizontalStackLayout VerticalOptions="Center" Spacing="10" Padding="10,0">
                        <!--IMAGEM SUPORTE-->
                        <Image Source="suporte.png"
                        WidthRequest="20"
                        HeightRequest="20"
                        VerticalOptions="Center"
                        BackgroundColor="Transparent"/>
                        
                        <Label Text="Suporte"
                        FontSize="16"
                        VerticalOptions="Center"
                        TextColor="Black"/>
                        
                    </HorizontalStackLayout>
                    
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer  CommandParameter="Início"/>
                    </Grid.GestureRecognizers>
                    
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="EstadoComun">
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="Seelecionado">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{StaticResource CorQuartaria}"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Grid>

            </VerticalStackLayout>
        </StackLayout>

        <!-- CONTEÚDO -->
        <ScrollView Grid.Column="1" BackgroundColor="{StaticResource CorBranco}">
            <Grid Padding="20">

                <!--Coniguração que organiza o onteúdo principal-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Saudação + busca -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    

                        <Image Source="menu.png" Grid.Column="0"
                            WidthRequest="25" HeightRequest="25"
                               HorizontalOptions="Start" 
                               VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnMenuTapped"/>
                            </Image.GestureRecognizers>
                        </Image>

                    <VerticalStackLayout Grid.Column="1"   VerticalOptions="Center" Margin="17,0,0,0">
                        <Label Text="Olá, USUÁRIO" FontSize="20" FontAttributes="Bold"/>
                        <Label Text="Seja bem-vindo de volta, Vamos alocar?!" FontSize="12"/>
                    </VerticalStackLayout>

                    <Border Grid.Column="2"
                        HeightRequest="50"
                        BackgroundColor="{StaticResource CorQuartaria}"
                        VerticalOptions="Center"
                        Margin="0,0,15,0"
                        WidthRequest="1105">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>

                        <Grid ColumnSpacing="0" Padding="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="procurar.png" 
                            Grid.Column="0" 
                            WidthRequest="20" 
                            HeightRequest="20" 
                            VerticalOptions="Center"/>

                            <Entry Grid.Column="1"
                            Placeholder="Pesquisar..."
                            BackgroundColor="Transparent"   VerticalOptions="Center"
                            PlaceholderColor="Gray"
                            FontSize="14"
                            Margin="5,0,0,0"/>
                        </Grid>
                    </Border>


                    <Image Source="chat.png" Grid.Column="3"
                    WidthRequest="30" HeightRequest="30" 
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    Margin="0,0,15,0"/>
                    
                    
                </Grid>
                <!-- Banner -->
                <Grid Grid.Row="1">
                    <Border HeightRequest="550" 
                        Margin="0,20,0,0"
                        BackgroundColor="{StaticResource CorQuartaria}">

                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>

                        <Grid>

                            <CarouselView x:Name="BannerCarousel" Margin="0,0">

                                <CarouselView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="0"/>
                                </CarouselView.ItemsLayout>

                                <CarouselView.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>bannner1.png</x:String>
                                        <x:String>banner2.png</x:String>
                                        <x:String>banner3.png</x:String>
                                    </x:Array>
                                </CarouselView.ItemsSource>

                                <CarouselView.ItemTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding .}" Aspect="AspectFill"/>
                                    </DataTemplate>
                                </CarouselView.ItemTemplate>
                            </CarouselView>
                            
                            <!--SETAS-->

                            <Grid>
                                <Grid>
                                    <!--config das setas-->
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                        
                                    
                                    <!--SETA ESQUERDA-->
                                    <Grid Grid.Column="0"
                                          WidthRequest="50" HeightRequest="50"
                                          VerticalOptions="Center"
                                          Margin="10,0,0,0"
                                          BackgroundColor="Transparent">

                                        <Image Source="setaesquerda.png" WidthRequest="30" HeightRequest="30" VerticalOptions="Center" HorizontalOptions="Center" Opacity="0.7"/>

                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnPrevBannerClicked"/>
                                        </Grid.GestureRecognizers>

                                    </Grid>

                                    <!--SETA DIREITA-->
                                    
                                    <Grid Grid.Column="2"
                                          WidthRequest="50" HeightRequest="50"
                                          VerticalOptions="Center"
                                          Margin="0,0,10,0"
                                          BackgroundColor="Transparent">

                                        <Image Source="setadireita.png" WidthRequest="30" HeightRequest="30" VerticalOptions="Center" HorizontalOptions="Center" Opacity="0.7"/>

                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnNextBannerClicked"/>
                                        </Grid.GestureRecognizers>
                                    </Grid>

                                </Grid>
                            </Grid>

                            <IndicatorView x:Name="BannerIndicator"
                            IndicatorColor="Gray"
                            SelectedIndicatorColor="Black"
                            IndicatorSize="8"
                            HorizontalOptions="Center"
                            VerticalOptions="End"
                            Margin="0,0,0,10"
                            IsVisible="True"/>

                        </Grid>
                    </Border>
                </Grid>

                <!--Titulu de ferramentas-->

                <Grid Grid.Row="2" Margin="20,20,0,20">
                    <Label Text="Ferramentas"
                    FontSize="18"
                    FontAttributes="Bold" />
                </Grid>

                <Grid Grid.Row="3">
                </Grid>

                <!-- caixas de categoria-->

                <CollectionView Grid.Row="3" HeightRequest="40" Margin="8,0,0,0">
                    <!-- Esta parte faz com que os cards de categoria fiquem em linha reta-->
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal"
                                       ItemSpacing="8"/>
                    </CollectionView.ItemsLayout>

                    <!-- Esse faz com que apareça os dados ou nomes-->
                    <CollectionView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Categoria 1</x:String>
                            <x:String>Categoria 2</x:String>
                            <x:String>Categoria 3</x:String>
                            <x:String>Categoria 4</x:String>
                            <x:String>Categoria 5</x:String>
                        </x:Array>
                    </CollectionView.ItemsSource>

                    <!--Aqui é a confiuração das caixas-->
                    <CollectionView.ItemTemplate>
                        <!--Data template é obrigatório para o molde visual das caixas-->
                        <DataTemplate>
                            <Border WidthRequest="200"  BackgroundColor="{StaticResource CorQuartaria}" Padding="16,0">

                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>


                                <Label Text="{Binding .}"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"
                                   FontSize="12"/>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!--Ferramentas-->

                <!--Esse itemSource fala o que é-->
                <CollectionView Grid.Row="4" Margin="0,10,0,0"
                    ItemsSource="{Binding Ferramentas}"
                    HeightRequest="300" 
                    HorizontalScrollBarVisibility="Always">

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal"  ItemSpacing="15" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="{StaticResource CorQuartaria}"
                            WidthRequest="250">

                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>

                                <VerticalStackLayout Padding="10" Spacing="5">

                                    <Image Source="{Binding ImagemSource}" 
                                    Aspect="AspectFill"
                                    HeightRequest="150"/>
                                    <Label Text="{Binding Titulo}" 
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Margin="0,5,0,0" />

                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="{Binding PrecoDia}" 
                                        FontSize="14" 
                                        TextColor="Green"/>
                                        <Label Text="•" VerticalOptions="Center" />
                                        <Label Text="{Binding Disponibilidade}" 
                                        FontSize="14" 
                                        TextColor="Gray"/>
                                    </HorizontalStackLayout>

                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>


            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
